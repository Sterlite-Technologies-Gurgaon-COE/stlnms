<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
    <changeSet author="rangerrick" id="1.6.0-modbus_nodes">
        <validCheckSum>3:bf2fe2bd84eacb76952e7fb6c7f18f57</validCheckSum>
        <preConditions onFail="MARK_RAN">
            <not><tableExists tableName="modbus_nodes" /></not>
        </preConditions>
        <createTable tableName="modbus_nodes">
            <!-- Unique identifier -->
            <column name="ip_address" type="text">
                <constraints nullable="false" />
            </column>
             <column name="start_address" type="integer">
                <constraints nullable="false" />
            </column>
             <column name="num_registers" type="integer">
                <constraints nullable="false" />
            </column>
             <column name="port" type="integer">
                <constraints nullable="false" />
            </column>
           <column name="pkey" type="integer" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"  />
            </column>
             <column name="nodeid" type="integer">
				<constraints nullable="false" />
			</column>
        </createTable>
          <addForeignKeyConstraint baseColumnNames="nodeid"
                             baseTableName="modbus_nodes"
                             constraintName="fk_modbus_nodes_nodeid"
                             referencedColumnNames="nodeid"
                             referencedTableName="node"/>
    </changeSet>
</databaseChangeLog>